<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Box" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_500</item>
        <item name="colorPrimaryDark">@color/gray_700</item>
        <item name="colorAccent">@color/gray_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Box.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Box.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Box.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>